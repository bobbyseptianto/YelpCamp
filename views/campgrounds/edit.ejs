<% layout('./layouts/boilerplate') -%>

  <h1>Edit Campground</h1>
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title :</label><br>
      <input type="text" name="title" id="title" value="<%= campground.title %>">
    </div><br>
    <div>
      <label for="location">Location :</label><br>
      <input type="text" name="location" id="location" value="<%= campground.location %>">
    </div><br>
    <button type="submit">Edit Campground</button>
    <button><a href="/campgrounds/<%= campground._id %>">Back</a></button>
  </form>